<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post a Game</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <%- include('partials/navbar') %>

    <main class="main-content">
        <div class="container" style="max-width: 600px;">
            <div class="card">
                <h2>Post a New Game</h2>
                
                <form action="/games" method="POST" id="create-game-form">
                    
                    <input type="hidden" name="createdBy" id="createdBy">
                    <input type="hidden" name="creatorEmail" id="creatorEmail">

                    <div class="form-group">
                        <label for="title">Game Title</label>
                        <input type="text" id="title" name="title" class="form-control" placeholder="e.g. Sunday Cricket Match" required>
                    </div>

                    <div class="form-group">
                        <label for="sport">Sport</label>
                        <select id="sport" name="sport" class="form-control">
                            <option value="Cricket">Cricket</option>
                            <option value="Football">Football</option>
                            <option value="Badminton">Badminton</option>
                            <option value="Tennis">Tennis</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="location">Location (Turf Name)</label>
                        <input type="text" id="location" name="location" class="form-control" placeholder="e.g. Indiranagar Turf Park" required>
                        
                        <div id="map-preview" style="margin-top: 5px; display: none;">
                            <a href="#" target="_blank" id="map-link" style="font-size: 0.9rem; color: #2563eb; text-decoration: none;">
                                üìç Check this location on Google Maps
                            </a>
                        </div>
                    </div>

                    <div class="form-group" style="display: flex; gap: 10px;">
                        <div style="flex: 1;">
                            <label for="date">Date</label>
                            <input type="date" id="date" name="date" class="form-control" required>
                        </div>
                        <div style="flex: 1;">
                            <label for="time">Time</label>
                            <input type="time" id="time" name="time" class="form-control" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="playersNeeded">Spots Open</label>
                        <input type="number" id="playersNeeded" name="playersNeeded" class="form-control" placeholder="e.g. 3" required>
                    </div>

                    <button type="submit" class="btn" style="width: 100%;">Post Game</button>
                </form>
            </div>
        </div>
    </main>

    <script type="module">
        import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        const auth = window.auth || getAuth(); 

        onAuthStateChanged(auth, (user) => {
            if (user) {
                document.getElementById('createdBy').value = user.uid;
                document.getElementById('creatorEmail').value = user.email;
            } else {
                alert("You must be logged in to post a game!");
                window.location.href = '/login';
            }
        });

        // --- NEW: MAP PREVIEW LOGIC ---
        const locInput = document.getElementById('location');
        const mapPreview = document.getElementById('map-preview');
        const mapLink = document.getElementById('map-link');

        locInput.addEventListener('input', (e) => {
            const val = e.target.value;
            if (val.length > 3) {
                mapPreview.style.display = 'block';
                // Create a Google Maps Search URL
                mapLink.href = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(val)}`;
            } else {
                mapPreview.style.display = 'none';
            }
        });
    </script>

</body>
</html>