<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Yeahturf</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <%- include('partials/navbar') %>

    <main class="main-content">
        <div class="container" style="max-width: 400px; margin-top: 3rem;">
            <div class="card" style="text-align: center;">
                <h2>Welcome Back</h2>
                <p style="margin-bottom: 1.5rem; color: #666;">Login to join upcoming games.</p>

                <form id="login-form">
                    <div class="form-group">
                        <input type="email" id="email" class="form-control" placeholder="Email Address" required>
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="form-control" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn" style="width: 100%;">Login</button>
                </form>
                
                <p style="margin-top: 1rem;">New here? <a href="/signup" style="color: var(--primary-color);">Create an account</a></p>
            </div>
        </div>
    </main>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getAuth, signInWithEmailAndPassword } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        // -------------------------------------------------
        // PASTE YOUR CONFIG HERE (Copy from signup.ejs)
        // -------------------------------------------------
        const firebaseConfig = {
            apiKey: "AIzaSyAgcCQVw7uupQr0FSMwyaLRLQRcus1ss3g",
            authDomain: "yeahturf-4cb5e.firebaseapp.com",
            projectId: "yeahturf-4cb5e",
            storageBucket: "yeahturf-4cb5e.firebasestorage.app",
            messagingSenderId: "1068687401138",
            appId: "1:1068687401138:web:1791b74bfa77d64eb969ab"
        };
        // -------------------------------------------------

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);

        document.getElementById('login-form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            try {
                const userCredential = await signInWithEmailAndPassword(auth, email, password);
                // Success! Redirect to the Games page
                window.location.href = '/games'; 
            } catch (error) {
                console.error(error);
                alert("Login Failed: " + error.message);
            }
        });
    </script>

</body>
</html>