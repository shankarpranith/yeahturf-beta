<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upcoming Games</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>

    <%- include('partials/navbar') %>

    <main class="main-content">
        <div class="container">
            
            <p style="font-size: 1.1rem; text-align: center; margin-bottom: 2rem;">
                Find an open game and join! Or, post your own game.
            </p>

            <form action="/games" method="GET" style="display: flex; justify-content: center; gap: 10px; margin-bottom: 1rem;">
                <input type="text" name="search" placeholder="Search location or title..." class="form-control" style="max-width: 300px; display: inline-block;">
                <button type="submit" class="btn">Search</button>
                <% if (locals.isSearching) { %>
                    <a href="/games" class="btn-secondary" style="display:inline-flex; align-items:center; text-decoration:none;">Clear</a>
                <% } %>
            </form>

            <div style="text-align: center; margin-bottom: 1.5rem; display: flex; justify-content: center; gap: 10px; flex-wrap: wrap;">
                <span style="font-weight: bold; align-self: center;">Filter by:</span>
                <a href="/games" class="btn-secondary" style="padding: 5px 15px; border-radius: 20px; text-decoration: none; border: 1px solid #ccc;">All</a>
                <a href="/games?sport=Football" class="btn-secondary" style="padding: 5px 15px; border-radius: 20px; text-decoration: none; border: 1px solid #ccc;">Football</a>
                <a href="/games?sport=Cricket" class="btn-secondary" style="padding: 5px 15px; border-radius: 20px; text-decoration: none; border: 1px solid #ccc;">Cricket</a>
                <a href="/games?sport=Badminton" class="btn-secondary" style="padding: 5px 15px; border-radius: 20px; text-decoration: none; border: 1px solid #ccc;">Badminton</a>
            </div>

            <div style="text-align: center; margin-bottom: 2.5rem;">
                <a href="/games/new" class="btn">Post Your Own Game</a>
            </div>

            <div class="grid">
                <% games.forEach(game => { %>
                    <div class="card">
                        <h3><%= game.title %></h3>
                        <p>
                            <strong>Sport:</strong> <%= game.sport %> <br>
                            <strong>Location:</strong> <%= game.location %> <br>
                            <strong>When:</strong> <%= game.date %> at <%= game.time %>
                        </p>
                        
                        <p style="font-size: 1.2rem; font-weight: bold; color: var(--primary-color);">
                            <%= game.playersNeeded %> Spots Open
                        </p>

                        <% if (game.roster && game.roster.length > 0) { %>
                            <div style="margin-top: 15px; border-top: 1px solid #eee; padding-top: 10px;">
                                <strong style="font-size: 0.9rem;">Players Joined:</strong>
                                <ul style="list-style: none; padding: 0; margin-top: 5px;">
                                    <% game.roster.forEach(player => { %>
                                        <li style="font-size: 0.9rem; margin-bottom: 5px; display: flex; justify-content: space-between; align-items: center;">
                                            <span>ðŸ‘¤ <%= player.name %></span>
                                            
                                            <a href="https://wa.me/<%= player.phone %>" 
                                               target="_blank"
                                               class="whatsapp-link btn-secondary"
                                               data-creator="<%= game.createdBy %>"
                                               style="display: none; padding: 2px 8px; font-size: 0.7rem; background-color: #25D366; color: white; border: none; text-decoration: none; border-radius: 4px;">
                                               Chat ðŸ’¬
                                            </a>
                                        </li>
                                    <% }) %>
                                </ul>
                            </div>
                        <% } else { %>
                            <div style="margin: 10px 0; font-size: 0.9rem; color: #888; font-style: italic;">
                                Be the first to join!
                            </div>
                        <% } %>
                        
                        <div style="display: flex; gap: 10px; align-items: center; margin-top: 1rem;">
                            
                            <% if (game.playersNeeded > 0) { %>
                                <button 
                                    onclick="openJoinModal('<%= game.id %>', '<%= game.title %>')" 
                                    class="btn" 
                                    style="width: 100%; flex: 1;">
                                    Join Game
                                </button>
                            <% } else { %>
                                <button class="btn" style="flex: 1; background-color: #9ca3af; cursor: not-allowed;" disabled>Game Full</button>
                            <% } %>

                            <form 
                                action="/games/delete/<%= game.id %>" 
                                method="POST" 
                                class="delete-form"
                                data-owner="<%= game.createdBy %>"
                                style="display: none; margin: 0;"
                                onsubmit="return confirm('Delete this game?');"
                            >
                                <button type="submit" class="btn btn-danger" style="margin-top: 0;">Delete</button>
                            </form>

                        </div>
                    </div>
                <% }) %> 
            </div> </div>
    </main>

    <footer>
        <p>&copy; 2025 Yeahturf! All rights reserved.</p>
    </footer>

    <div id="joinModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; justify-content: center; align-items: center;">
        <div style="background: white; padding: 2rem; border-radius: 10px; width: 90%; max-width: 400px; position: relative;">
            <h3 id="modalGameTitle">Join Game</h3>
            <p>Please provide your details so the host can contact you.</p>
            
            <form id="joinForm" method="POST">
                <div class="form-group">
                    <label>Your Name</label>
                    <input type="text" name="name" id="modalName" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Phone Number (for WhatsApp)</label>
                    <input type="tel" name="phone" class="form-control" placeholder="e.g. 919999999999" required>
                    <small style="color: #666;">Enter with country code (e.g. 91 for India) no + symbol.</small>
                </div>
                
                <button type="submit" class="btn" style="width: 100%;">Confirm Join</button>
                <button type="button" onclick="closeJoinModal()" class="btn-secondary" style="width: 100%; margin-top: 10px; border: 1px solid #ccc;">Cancel</button>
            </form>
        </div>
    </div>

    <script type="module">
        import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
        
        const auth = window.auth || getAuth();

        // --- GLOBAL MODAL FUNCTIONS ---
        window.openJoinModal = function(gameId, gameTitle) {
            if (!auth.currentUser) {
                alert("Please login to join!");
                window.location.href = '/login';
                return;
            }

            const modal = document.getElementById('joinModal');
            const form = document.getElementById('joinForm');
            const title = document.getElementById('modalGameTitle');
            const nameInput = document.getElementById('modalName');

            form.action = `/games/join/${gameId}`;
            title.innerText = `Join: ${gameTitle}`;
            nameInput.value = auth.currentUser.email.split('@')[0];

            modal.style.display = 'flex';
        }

        window.closeJoinModal = function() {
            document.getElementById('joinModal').style.display = 'none';
        }

        // --- AUTH & UI UPDATE ---
        onAuthStateChanged(auth, (user) => {
            const deleteForms = document.querySelectorAll('.delete-form');
            const waLinks = document.querySelectorAll('.whatsapp-link');

            if (user) {
                // Show Delete button if you are the owner
                deleteForms.forEach(form => {
                    if (form.getAttribute('data-owner') === user.uid) form.style.display = 'block';
                });

                // Show WhatsApp button if you are the creator
                waLinks.forEach(link => {
                    if (link.getAttribute('data-creator') === user.uid) {
                        link.style.display = 'inline-block';
                    }
                });
            } else {
                deleteForms.forEach(f => f.style.display = 'none');
                waLinks.forEach(l => l.style.display = 'none');
            }
        });
    </script>

</body>
</html>